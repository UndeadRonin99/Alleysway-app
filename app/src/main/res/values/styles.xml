<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom DatePickerDialog Theme for DatePickerDialog -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/orange</item>
        <!-- Use a datePickerStyle that exists in your SDK version -->
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <!-- Custom DatePicker Style -->
    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.CodiaDemo.LogWorkout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <!-- Secondary branding colors -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColorSecondary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>
</resources>
